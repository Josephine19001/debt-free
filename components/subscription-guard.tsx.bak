import React, { useEffect } from 'react';
import { useSubscriptionStatus } from '@/lib/hooks/use-subscription-status';
import { useAuth } from '@/context/auth-provider';
import { router } from 'expo-router';

interface SubscriptionGuardProps {
  children: React.ReactNode;
  feature?: string;
  requireSubscription?: boolean;
}

export function SubscriptionGuard({
  children,
  feature,
  requireSubscription = true, // Default to true - most screens need subscription
}: SubscriptionGuardProps) {
  const { user } = useAuth();
  const { data: subscriptionStatus, isLoading } = useSubscriptionStatus();

  useEffect(() => {
    if (!user || isLoading) return;

    // Only show paywall if subscription is required AND user should see paywall
    if (requireSubscription && subscriptionStatus?.shouldShowPaywall) {
      const source = subscriptionStatus.isInGracePeriod ? 'grace_period' : 'feature_gate';
      const dismissible = subscriptionStatus.isInGracePeriod;
      
      // Navigate to paywall with minimal parameters
      const paywallUrl = `/paywall?source=${source}&dismissible=${dismissible}&successRoute=/(tabs)/nutrition`;
      router.replace(paywallUrl as any);
    }
  }, [user, subscriptionStatus, isLoading, requireSubscription]);

  // If loading, show the children (they can handle their own loading states)
  if (isLoading) {
    return <>{children}</>;
  }

  // If subscription not required, always show content
  if (!requireSubscription) {
    return <>{children}</>;
  }

  // If user is subscribed or in grace period, show content
  if (subscriptionStatus?.isSubscribed || subscriptionStatus?.isInGracePeriod) {
    return <>{children}</>;
  }

  // If subscription is required but user is not subscribed and not in grace period
  // Don't render children - the paywall will be shown by the useEffect above
  return null;
}
